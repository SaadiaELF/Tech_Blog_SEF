<main class="edit-post-form container container-fluid mt-5">
    <div class="card" style="width: 80%">
        <div class="card-header">
            <h3>Edit Post</h3>
        </div>
        <div class="card-body">
            <form class="m-3">
                <div class="form-group m-3">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" value="{{post.title}}" required>
                </div>
                <div class="form-group m-3">
                    <label for="content">Content</label>
                    <textarea class="form-control" id="content" rows="5" required>{{post.content}}</textarea>
                </div>
                <div class="btn-group btn-group" role="group">
                    <button id="updateBtn" type="submit" class="btn btn-danger" style="width: 150px;"
                        value="{{post.id}}">UPDATE</button>
                    <a href="/dashboard" class="btn btn-secondary" style="width: 150px;">CANCEL</a>
                </div>
            </form>
        </div>
</main>
<script src="/js/update-post.js"></script>